<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="bean.UtoR" table="u2r" schema="wifi">
        <id name="uid">
            <column name="UserID" sql-type="int(11)"/>
        </id>
        <property name="rid">
            <column name="RouterID" sql-type="int(11)"/>
        </property>
        <property name="nid">
            <column name="NewID" sql-type="int(11)"/>
        </property>
        <property name="rela">
            <column name="Relationship" sql-type="varchar(255)"/>
        </property>
    </class>
</hibernate-mapping>